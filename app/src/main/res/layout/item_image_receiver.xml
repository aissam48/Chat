<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImageReceiver"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5sp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/milk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    <ImageView
        android:id="@+id/item_image_receiver_img"
        android:layout_width="180sp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@color/gray"
        />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/isLoadedProgressImageReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/item_image_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardImageReceiver"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:text="10:05 pm"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        />


</androidx.constraintlayout.widget.ConstraintLayout>